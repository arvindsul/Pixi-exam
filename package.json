{
  "name": "pixi-playground",
  "version": "1.0.0",
  "description": "A basic testbed for pixi.js application development",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "npm run build:dev",
    "start": "npm run start:dev",
    "build:dev": "webpack --config ./webpack.config.js --progress --env env=dev",
    "build:prod": "webpack --config ./webpack.config.js --progress --env env=prod",
    "start:dev": "webpack serve --config ./webpack.config.js --progress --env env=dev"
  },
  "dependencies": {
    "gsap": "^3.6.1",
    "pixi.js-legacy": "^5.3.9",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "dotenv": "^9.0.2",
    "fork-ts-checker-webpack-plugin": "^6.2.7",
    "ts-loader": "^9.1.2",
    "typescript": "^4.2.4",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  }
}
